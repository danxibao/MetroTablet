<Page
    x:Class="Project_try.User_info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_try"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="welcome" HorizontalAlignment="Left" TextWrapping="Wrap" Text="个人信息" VerticalAlignment="Top" 
    		Margin="513,60,0,0" FontSize="75"/>
        <Grid>
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                </TransitionCollection>
            </Grid.Transitions>
            <TextBox x:Name="userName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" 
    		Margin="390,210,776,526" MinWidth="200" MaxWidth="200" MaxHeight="34" PlaceholderText="用户名" BorderBrush="White"/>
            <PasswordBox x:Name="passWord" HorizontalAlignment="Center" VerticalAlignment="Center" 
    		PlaceholderText="密码" Margin="801,462,365,274" MinWidth="200" MaxWidth="200" 
    		MaxHeight="32" IsPasswordRevealButtonEnabled="True" BorderBrush="White" Background="White" />
            <TextBox x:Name="Name" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" 
    		VerticalAlignment="Center" Margin="390,272,776,464" MinWidth="200" MaxWidth="200" 
    		MaxHeight="34" PlaceholderText="姓名"/>
            <TextBox x:Name="Sex" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" 
    		VerticalAlignment="Center" Margin="390,336,776,400" MinWidth="200" MaxWidth="200" 
    		MaxHeight="34" PlaceholderText="男/女" BorderBrush="White"/>
            <TextBox x:Name="Age" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" 
    		VerticalAlignment="Center" Margin="390,398,776,338" MinWidth="200" MaxWidth="200" 
    		MaxHeight="34" PlaceholderText="请输入数字"/>
            <TextBox x:Name="Rank" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" 
    		VerticalAlignment="Center" Margin="390,465,776,271" MinWidth="200" MaxWidth="200" 
    		MaxHeight="34" PlaceholderText="职级"/>
            <TextBox x:Name="Unit" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" 
    		VerticalAlignment="Center" Margin="801,213,365,523" MinWidth="200" MaxWidth="200" 
    		MaxHeight="34" PlaceholderText="单位"/>
            <TextBox x:Name="ID" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" 
    		VerticalAlignment="Center" Margin="801,273,365,463" MinWidth="200" MaxWidth="200" 
    		MaxHeight="34" PlaceholderText="7位"/>
            <TextBlock x:Name="userNameMsg" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" 
        	Margin="390,242,796,502" FontSize="20" Width="180" Foreground="Gray"/>
        </Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="用户名" VerticalAlignment="Center" 
                   Margin="277,211,1014,527" FontSize="25" RenderTransformOrigin="0.893,0.533"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="性别" VerticalAlignment="Center" 
    		Margin="277,337,984,401" FontSize="25" Width="105"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="年龄" VerticalAlignment="Center" 
    		Margin="277,399,984,339" FontSize="25" Width="105"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="单位" VerticalAlignment="Center" 
    		Margin="688,214,573,524" FontSize="25" Width="105"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="职级" VerticalAlignment="Center" 
    		Margin="277,466,984,271" FontSize="25" Width="105" Height="31"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="姓名" VerticalAlignment="Center" 
    		        Margin="277,273,984,465" FontSize="25" Width="105"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="密码" 
    		VerticalAlignment="Center" Margin="688,463,628,275" FontSize="25"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="证件号" VerticalAlignment="Center" 
    		Margin="688,274,573,464" FontSize="25" Width="105"/>
        <AppBarButton x:ConnectionId='1' HorizontalAlignment="Center" Label="确认" VerticalAlignment="Center" Margin="532,534,734,146"
    		Icon="Accept"                     />
        <AppBarButton x:ConnectionId='2' HorizontalAlignment="Center" Label="取消" VerticalAlignment="Center" Margin="682,534,584,146"
    		Icon="Cancel"                     />
    </Grid>
</Page>

